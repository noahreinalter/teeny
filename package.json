{
    "name": "teeny-site",
    "version": "0.2.2",
    "description": "A very simple static site generator",
    "author": "Yakko Majuri, Noah Reinalter",
    "main": "cli.js",
    "license": "MIT",
    "bin": {
        "teeny": "cli.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/noahreinalter/teeny"
    },
    "scripts": {
        "dev:build": "npm run dev && teeny build",
        "dev:develop": "npm run dev && teeny develop",
        "dev:init": "npm run dev && teeny init",
        "dev": "rm teeny-site* || true && npm pack && sudo npm i -g teeny-site*.tgz -f",
        "lint": "prettier --write ."
    },
    "devDependencies": {
        "prettier": "^2.4.1"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "front-matter": "^4.0.2",
        "fs-extra": "^10.0.1",
        "jsdom": "^19.0.0",
        "marked": "^4.0.12"
    },
    "files": [
        "cli.js"
    ]
}
